<!-- main container  -->
<main>

   <!-- this section added for question feed  -->
   <section id="feed-question">
      <!-- question data  -->
      <div id="question-list">
         <!-- main questions loop start here  -->
         <% for(let question of questions){ %>
            <!-- if condition start here -->
            <% if (question.user) { %>
               <li>
                  <div class="list1">
                     <img src="/images/Sahil_Sayyad_Photo.jpg" alt="">
                     <!-- who asked question  -->
                     <b> &nbsp;<%= question.user.name %></b>
                     <!-- follow to user -->
                     <% if(locals.user){%>
                        <a href="/users/follow/<%=question.user._id%>"> . Follow</a>
                        <% } %>
                           <small class="text">Software Engineer From Ahmednagar, India</small>
                  </div>
                  <!-- question content -->
               <li>
                  <div class="listcontent">
                     <%=question.content %>
                        <% if(locals.user){%>
                           <!-- for upvoting to the question -->
                           <a href="/questions/create-upvote/<%=question._id %>"> <img src="/images/up-arrow.png" alt=""
                                 height="15px">Upvote .</a>
                           <!-- for Downvoting to the question -->
                           <a href="/questions/create-downvote/<%=question._id %>"> <img src="/images/arrow-down.png"
                                 alt="" height="15px">Downvote .</a>
                           <button type="submit" class="ansBtn" id="myBtn3">Add Answer</button>
                           <% } %>
                  </div>
               </li>

               <!-- for anwering the question -->
               <!-- The Modal -->
               <div id="myModal3" class="modal3">
                  <!-- Modal content -->
                  <div class="modal-content3">
                     <span class="close3">&times;</span>
                     <div class="content3">
                        <% if(locals.user){%>
                           <form action="/answers/create-answer" method="post">
                              <input type="text" name="content" placeholder="Write your answer">
                              <input type="hidden" name="question" value="<%= question._id %>">
                              <button type="submit" class="ansBtn"> Submit</button>
                           </form>
                           <% } %>
                     </div>
                  </div>
               </div>

               <!-- section for answer data  -->
               <div id="question-anwers-list">
                  <ul id="question-anwers<%= question._id %>">
                     <!-- answers loop start here  -->
                     <% for(let answer of question.answers){ %>

                        <p>
                           <!-- questions answer -->
                           Answer : <%=answer.content%>
                              <br>
                              <small>
                                 <!-- who Answered -->
                                 Answered by : <b>
                                    <%=answer.user.name%>
                                 </b>
                              </small>
                              <br>
                        </p>
                        <!-- for upvoting to the answer -->
                        <% if(locals.user){%>
                           <a href="/answers/create-upvote/<%= answer._id %>"> <img src="/images/up-arrow.png" alt=""
                                 height="15px">Upvote .</a>
                           <!-- for Downvoting to the answer -->
                           <a href="/answers/create-downvote/<%= answer._id %>"> <img src="/images/arrow-down.png"
                                 alt="" height="15px">Downvote .</a>
                           <!-- commenting to the answer  -->
                           <button class="commentBtn" id="myBtn4" type="submit"><img src="/images/chat.png" alt=""
                                 height="18px">Comment .</button>
                           <% } %>
                              <!-- list of all answers comments -->
                              <!-- comments loop start here  -->
                              <% for(let comment of answer.comments){ %>
                                 <p class="comment-text">
                                    <small>
                                       <!-- comment data -->
                                       Comments : <%= comment.comment%> <br>
                                          <!-- who added comment -->
                                          Added by: <b>
                                             <%=comment.user.name%>
                                          </b>
                                          <br>
                                    </small>
                                 </p>
                                 <% } %>
                                    <!-- comments loop ends here  -->

                                    <!-- model for add comment -->
                                    <!-- The Modal -->
                                    <div id="myModal4" class="modal4">
                                       <!-- Modal content -->
                                       <div class="modal-content4">
                                          <span class="close4">&times;</span>
                                          <div class="content4">
                                             <% if(locals.user){%>
                                                <form action="/comments/create-comment" method="post">
                                                   <input type="text" name="comment" placeholder="Write your comment">
                                                   <input type="hidden" name="questionId" value="<%= question._id %>">
                                                   <input type="hidden" name="answerId" value="<%= answer._id %>">
                                                   <button type="submit">Add Comment</button>
                                                </form>
                                                <% } %>
                                          </div>
                                       </div>
                                    </div>
                                    <br><br><br>
                                    <% } %>
                                       <!-- answer loop end here  -->
                  </ul>
               </div>

               <hr><br>
               </li>
               <% } %>
                  <!-- if condition of question ends here  -->
                  <% } %>
                     <!-- main question loop ends here  -->
      </div>
   </section>
   <!-- question feed section ends here  -->
</main>
