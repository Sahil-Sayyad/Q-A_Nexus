<link rel="stylesheet" href="/stylesheets/user_profile.css" />
<h1><%= title %> / Profile Page</h1>

<% if(locals.user){ %>
<li><%=user.name%></li>
<li><a href="/users/sign-out">Sign Out</a></li>
<% }%>
<!-- for ask question to specific user  -->
<% if(locals.user){%>
<form action="/questions/create-specific" method="post">
  <textarea
    name="content"
    cols="30"
    rows="3"
    placeholder="ask question to the user"
  ></textarea>
  <input type="hidden" name="currentuserid" value=".." />
  <button type="submit" class="askQBtn">Ask Question</button>
</form>
<% } %>
